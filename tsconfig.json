{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es6", "es5", "es2015.collection", "es2015.iterable"],
    "types": ["node", "express", "mocha", "webpack-env"]
  }
}
